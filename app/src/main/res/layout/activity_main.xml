<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <TabHost android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >


                <RelativeLayout
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Disfruta de los platos de muestro Restaurante el Merendero"
                        android:id="@+id/textView3"
                        android:layout_marginTop="54dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@mipmap/rest"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/listView1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn1"
                        android:src="@drawable/img1"
                        android:onClick="plato_1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/checkbox_off_background"
                        />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn2"
                        android:src="@drawable/img2"
                        android:nestedScrollingEnabled="false"
                        android:onClick="plato_2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:drawable/checkbox_off_background"
                        />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn3"
                        android:src="@drawable/img3"
                        android:onClick="plato_3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/checkbox_off_background"
                        />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn4"
                        android:src="@drawable/img4"
                        android:onClick="plato_4"
                        android:background="@android:drawable/checkbox_off_background"
                        android:layout_alignTop="@+id/btn3"
                        android:layout_alignParentEnd="true" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn5"
                        android:src="@drawable/img5"
                        android:onClick="plato_5"
                        android:layout_alignTop="@+id/btn6"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/checkbox_off_background"
                        />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn6"
                        android:src="@drawable/img6"
                        android:nestedScrollingEnabled="false"
                        android:onClick="plato_6"
                        android:layout_marginBottom="29dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" android:background="@android:drawable/checkbox_off_background"

                        />

                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>
